<!-- custom title container -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_linear_layout_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
	<!-- row 1 -->
	<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

    <!-- YOUR -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:gravity="center"
        android:background="@drawable/border_black_letter"
        android:layout_marginRight="30dp"/>
    
    <!-- OWN -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N"
        android:gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/border_black_letter"/>
	</LinearLayout>

	<!-- row 2 -->
	<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <!-- SOUND -->
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="S"
         android:gravity="center"
         android:layout_marginRight="3dp"
         android:background="@drawable/border_black_letter"/>
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="O"
         android:gravity="center"
         android:layout_marginRight="3dp"
         android:background="@drawable/border_black_letter"/>
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="U"
         android:gravity="center"
         android:layout_marginRight="3dp"
         android:background="@drawable/border_black_letter"/>
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="N"
         android:gravity="center"
         android:background="@drawable/border_black_letter"
         android:layout_marginRight="3dp"/>
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="D"
         android:gravity="center"
         android:background="@drawable/border_black_letter" />
	</LinearLayout>
</LinearLayout>