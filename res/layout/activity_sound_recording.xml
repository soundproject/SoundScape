<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoundRecordingActivity" >

    <TextView
        android:id="@+id/recording_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/record_button"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/recording_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/recording_time_text_view"
        android:layout_marginBottom="54dp"
        android:text="TextView" />

    <Button
        android:id="@+id/play_recording_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recording_time_text_view"
        android:layout_toLeftOf="@+id/delete_sound_button"
        android:text="Play" />

    <Button
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_recording_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <Button
        android:id="@+id/delete_sound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_recording_button"
        android:layout_toRightOf="@+id/record_button"
        android:text="Delete" />

    <Button
        android:id="@+id/save_sound_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_recording_button"
        android:layout_toLeftOf="@+id/play_recording_button"
        android:text="Save" />

    <EditText
        android:id="@+id/sound_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/record_button"
        android:layout_toLeftOf="@+id/delete_sound_button"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/sound_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

</RelativeLayout>